<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.F_ShowItem"
    android:background="@color/whiteText">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <TextView
            android:id="@+id/textViewSafeNotSafeItemi"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="25sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/mainMenuButtonTextColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:id="@+id/textViewCountryCityi"
                android:textSize="18sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"
                android:id="@+id/textViewRatingNumberi" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/mainMenuButtonTextColor" />

        <com.google.android.gms.maps.MapView

            android:id="@+id/imageViewMapShowi"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            map:cameraZoom="14"
            map:mapType="normal"
            map:liteMode="true"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            android:focusable="false"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/mainMenuButtonTextColor" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/traffic_accidents"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/textViewTraffici"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="250dp"
                android:text="1"
                android:gravity="center"
                android:textSize="30sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainMenuButtonTextColor"
                android:layout_marginTop="60dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/pickpockets"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/textViewPickpocketsci"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="250dp"
                android:text="1"
                android:gravity="center"
                android:textSize="30sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainMenuButtonTextColor"
                android:layout_marginTop="60dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/kidnapping"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/textViewKidnappingi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="250dp"
                android:text="1"
                android:gravity="center"
                android:textSize="30sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainMenuButtonTextColor"
                android:layout_marginTop="60dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/homeless"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/textViewHomelessi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="250dp"
                android:text="1"
                android:gravity="center"
                android:textSize="30sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainMenuButtonTextColor"
                android:layout_marginTop="60dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/public_transport"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/textViewPublicTransporti"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="250dp"
                android:text="1"
                android:gravity="center"
                android:textSize="30sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainMenuButtonTextColor"
                android:layout_marginTop="60dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/parties_events"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/textViewPartiesi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="250dp"
                android:text="1"
                android:gravity="center"
                android:textSize="30sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainMenuButtonTextColor"
                android:layout_marginTop="60dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/shops"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/textViewShopsi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="250dp"
                android:text="1"
                android:gravity="center"
                android:textSize="30sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainMenuButtonTextColor"
                android:layout_marginTop="60dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/car_thefts"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/textViewCarTheftsi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="250dp"
                android:text="1"
                android:gravity="center"
                android:textSize="30sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainMenuButtonTextColor"
                android:layout_marginTop="60dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/kids_activities"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/textViewKidsi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="250dp"
                android:text="1"
                android:gravity="center"
                android:textSize="30sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainMenuButtonTextColor"
                android:layout_marginTop="60dp"/>

        </RelativeLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textViewCommenti"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/mainMenuButtonTextColor"
            android:layout_marginTop="30dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/editTextAddComment"
            android:hint="@string/add_your_comment"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/add_comment"
            android:id="@+id/buttonAddComment"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/mainMenuButtonTextColor"
            android:layout_marginTop="30dp"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>




    </LinearLayout>





</ScrollView>