<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ShowItem"
    android:background="@color/whiteText"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:focusable="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:focusable="true">

        <TextView
            android:id="@+id/textViewSafeNotSafeItemi"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="25sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/mainMenuButtonTextColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:id="@+id/textViewCountryCityi"
                android:textSize="18sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"
                android:id="@+id/textViewRatingNumberi" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/mainMenuButtonTextColor" />

        <com.google.android.gms.maps.MapView

            android:id="@+id/imageViewMapShowi"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            map:cameraZoom="14"
            map:mapType="normal"
            map:liteMode="true"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            android:focusable="false"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/mainMenuButtonTextColor" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/traffic_accidents"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/textViewTraffici"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="250dp"
                android:text="1"
                android:gravity="center"
                android:textSize="30sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainMenuButtonTextColor"
                android:layout_marginTop="60dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/pickpockets"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/textViewPickpocketsci"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="250dp"
                android:text="1"
                android:gravity="center"
                android:textSize="30sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainMenuButtonTextColor"
                android:layout_marginTop="60dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/kidnapping"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/textViewKidnappingi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="250dp"
                android:text="1"
                android:gravity="center"
                android:textSize="30sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainMenuButtonTextColor"
                android:layout_marginTop="60dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/homeless"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/textViewHomelessi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="250dp"
                android:text="1"
                android:gravity="center"
                android:textSize="30sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainMenuButtonTextColor"
                android:layout_marginTop="60dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/public_transport"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/textViewPublicTransporti"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="250dp"
                android:text="1"
                android:gravity="center"
                android:textSize="30sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainMenuButtonTextColor"
                android:layout_marginTop="60dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/parties_events"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/textViewPartiesi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="250dp"
                android:text="1"
                android:gravity="center"
                android:textSize="30sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainMenuButtonTextColor"
                android:layout_marginTop="60dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/shops"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/textViewShopsi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="250dp"
                android:text="1"
                android:gravity="center"
                android:textSize="30sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainMenuButtonTextColor"
                android:layout_marginTop="60dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/car_thefts"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/textViewCarTheftsi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="250dp"
                android:text="1"
                android:gravity="center"
                android:textSize="30sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainMenuButtonTextColor"
                android:layout_marginTop="60dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/kids_activities"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/textViewKidsi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="250dp"
                android:text="1"
                android:gravity="center"
                android:textSize="30sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainMenuButtonTextColor"
                android:layout_marginTop="60dp"/>

        </RelativeLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="@string/description"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15sp" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textViewCommenti"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/mainMenuButtonTextColor"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="@string/comments"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15sp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/listViewComments"
            android:layout_marginTop="10dp">

        </ListView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/mainMenuButtonTextColor"
            android:layout_marginTop="1dp"/>

        <company.pawelzielinski.safeplace.Classes.EditTextV2
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/editTextAddComment"
            android:hint="@string/add_your_comment"
            android:layout_marginTop="5dp"
            android:gravity="center"/>


        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:cardCornerRadius="30dp"
            android:layout_gravity="center"
            android:background="@color/buttons"
            app:cardBackgroundColor="@color/buttons">
            <Button
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="@string/add_comment"
                android:background="@color/buttons"
                android:id="@+id/buttonAddComment"
                android:textSize="18sp"
                style="?android:textAppearanceSmall"/>

        </android.support.v7.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/mainMenuButtonTextColor"
            android:layout_marginTop="5dp"/>




    </LinearLayout>





</ScrollView>